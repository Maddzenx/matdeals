
{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "noEmit": true,
    "checkJs": false,
    "allowJs": true,
    "types": ["@supabase/supabase-js"],
    // Disable type checking for Deno modules
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
